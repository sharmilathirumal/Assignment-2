public class Person{
       String name;
        int age ;
    
    public Person(){
        this.age = 18;
    }
    public Person(String name,int age){
        this.name = name;
        this.age = age;
    }
    public void DisplayNameAndAge(){
        System.out.println("the person name is"+" "+name);
        System.out.println("the person age is"+" "+age);
    }
    public static void main(String []args){
       Person personOne = new Person();
       System.out.println("this is a default person");
       personOne.DisplayNameAndAge();
       
       Person personTwo = new Person("Thamizh",25);
       System.out.println("Named person");
       personTwo.DisplayNameAndAge();
     }
}
